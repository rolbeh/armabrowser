<Window x:Class="ArmaBrowser.MainWindow"  x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModel="clr-namespace:ArmaBrowser.ViewModel"
        xmlns:views="clr-namespace:ArmaBrowser.Views"
         xmlns:view="clr-namespace:ArmaBrowser.Views.View"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:ComponentModel="clr-namespace:System.ComponentModel;assembly=WindowsBase"
        xmlns:Data="clr-namespace:System.Windows.Data;assembly=PresentationFramework"
        xmlns:Shader="clr-namespace:ArmaBrowser.Shader"
        xmlns:WStyle="clr-namespace:ArmaBrowser.Styles"
        xmlns:logic="clr-namespace:ArmaBrowser.Logic"
        xmlns:properties="clr-namespace:ArmaBrowser.Properties"
        Title="ARMA III Browser (Community Project by Tackle mail@armabrowser.org)" 
        Height="693" Width="1023" MinWidth="660" MinHeight="600"
        UseLayoutRounding="False"
        Foreground="White"
        RenderOptions.BitmapScalingMode="NearestNeighbor"
        Closing="Window_Closing"
        Loaded="ServerListControl_Loaded"
        Icon="/Img/ArmaBrowser32.png"
        Style="{StaticResource VS2012WindowStyle}" WindowState="Maximized">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <DataTemplate x:Key="SelectAddonsDataTemplate">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" Source="/Img/cert24.png" Stretch="Uniform" Margin="0,2,0,0"
                       VerticalAlignment="Top" Height="17" StretchDirection="DownOnly">
                    <FrameworkElement.Style>
                        <Style TargetType="Image">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=CanActived}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </FrameworkElement.Style>
                </Image>
                <TextBlock Grid.Column="1" Text="{Binding Path=DisplayText}"/>
            </Grid>
        </DataTemplate>

    </Window.Resources>

    <Window.DataContext>
        <viewModel:ServerListViewModel x:Name="MyViewModel" />
    </Window.DataContext>
    <Window.CommandBindings>
        <CommandBinding Command="Open" CanExecute="OpenCommandBinding_CanExecute" Executed="OpenCommandBinding_Executed"/>
    </Window.CommandBindings>
    <Grid Background="{StaticResource BackroundNormalBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Main content area -->
        <Grid  Margin="10,4,10,10" Grid.Row="1">

            <!-- Sidebar -->


            <!-- server listing -->
            <Grid Visibility="Visible">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="42"/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="259" MinWidth="259"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="127"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="1"  Click="RefrshServerlist_Click" Padding="3" Margin="0" VerticalAlignment="Center" 
                            Foreground="Black"
                            BorderThickness="0" 
                            BorderBrush="{x:Null}">
                            <TextBlock Foreground="Black">refresh server</TextBlock>
                        </Button>
                        <Grid Margin="0,4,4,4" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
                            <TextBlock x:Name="WaterMark" Text="Search for server or Missions" Foreground="#FFE0E0E0" VerticalAlignment="Center" 
                                   FontStyle="Italic"
                                   FontSize="18"
                                   IsHitTestVisible="False"
                                   Margin="30,1,3,1">
                            <FrameworkElement.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Hidden"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=Text, ElementName=SearchText}" Value="{x:Static sys:String.Empty}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </FrameworkElement.Style>
                            </TextBlock>
                            <!-- bussy -->
                            <Grid  HorizontalAlignment="Right" Height="20" Width="20"  Visibility="{Binding LoadingBusy, Converter={StaticResource BooleanToVisibilityConverter}}" >
                                <FrameworkElement.Resources>
                                    <RotateTransform x:Key="GridRotateTransform" />
                                </FrameworkElement.Resources>
                                <Path  Visibility="Hidden"  RenderTransformOrigin="0.5 0.5" Stroke="Black" Fill="BlueViolet" Height="20" Width="20">
                                    <Path.Data>
                                        <GeometryGroup FillRule="EvenOdd">
                                            <EllipseGeometry Center="10 10" RadiusX="9" RadiusY="9" />
                                            <EllipseGeometry Center="10 10" RadiusX="6" RadiusY="6" />
                                        </GeometryGroup>
                                    </Path.Data>
                                </Path>
                                <Path Visibility="Hidden"  
                                  RenderTransformOrigin="0.5 0.5" Height="20" Width="20">
                                    <Path.Fill>
                                        <RadialGradientBrush  Center="0.5,-0.23" GradientOrigin="0.8,0.25" RadiusX="0.68" RadiusY="0.68">
                                            <GradientStop Color="#BFFFFFFF" Offset="0" />
                                            <GradientStop Color="#00FFFFFF" Offset="1" />
                                            <GradientStop Color="#21FFFFFF" Offset="0.65" />
                                        </RadialGradientBrush>
                                    </Path.Fill>
                                    <Path.Data>
                                        <GeometryGroup FillRule="EvenOdd">
                                            <EllipseGeometry Center="10 10" RadiusX="9" RadiusY="9" />
                                            <EllipseGeometry Center="10 10" RadiusX="6" RadiusY="6" />
                                        </GeometryGroup>
                                    </Path.Data>
                                </Path>
                                <Image HorizontalAlignment="Right" Height="20" Width="20" RenderTransformOrigin="0.5 0.5" >
                                    <Image.Source>
                                        <DrawingImage x:Name="Test" >
                                            <DrawingImage.Drawing>
                                                <DrawingGroup>
                                                    <GeometryDrawing Brush="BlueViolet" >
                                                        <GeometryDrawing.Pen>
                                                            <Pen DashCap="Round" Brush="Black"/>
                                                        </GeometryDrawing.Pen>
                                                        <GeometryDrawing.Geometry>
                                                            <GeometryGroup FillRule="EvenOdd">
                                                                <EllipseGeometry Center="10 10" RadiusX="9" RadiusY="9" />
                                                                <EllipseGeometry Center="10 10" RadiusX="6" RadiusY="6" />
                                                            </GeometryGroup>
                                                        </GeometryDrawing.Geometry>
                                                    </GeometryDrawing>
                                                    <GeometryDrawing>
                                                        <GeometryDrawing.Brush>
                                                            <RadialGradientBrush  Center="0.5,-0.23" GradientOrigin="0.8,0.25" RadiusX="0.68" RadiusY="0.68">
                                                                <GradientStop Color="#BFFFFFFF" Offset="0" />
                                                                <GradientStop Color="#00FFFFFF" Offset="1" />
                                                                <GradientStop Color="#21FFFFFF" Offset="0.65" />
                                                            </RadialGradientBrush>
                                                        </GeometryDrawing.Brush>
                                                        <GeometryDrawing.Geometry>
                                                            <GeometryGroup FillRule="Nonzero"  >
                                                                <EllipseGeometry Center="10 10" RadiusX="9" RadiusY="9" />
                                                                <EllipseGeometry Center="10 10" RadiusX="6" RadiusY="6" />
                                                            </GeometryGroup>
                                                        </GeometryDrawing.Geometry>
                                                    </GeometryDrawing>
                                                </DrawingGroup>
                                            </DrawingImage.Drawing>
                                        </DrawingImage>
                                    </Image.Source>
                                    <FrameworkElement.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform/>
                                            <SkewTransform/>
                                            <StaticResource ResourceKey="GridRotateTransform"/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </FrameworkElement.RenderTransform>
                                </Image>
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Style.Triggers>

                                            <Trigger Property="Visibility" Value="Visible">
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard RepeatBehavior="Forever"  Timeline.DesiredFrameRate="6">

                                                            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.Target="{StaticResource GridRotateTransform}" Storyboard.TargetProperty="(RotateTransform.Angle)">
                                                                <SplineDoubleKeyFrame KeyTime="00:00:02" Value="360" />
                                                            </DoubleAnimationUsingKeyFrames>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>
                                                <Trigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard RepeatBehavior="0"  Timeline.DesiredFrameRate="6">
                                                            <DoubleAnimation RepeatBehavior="0" BeginTime="00:00:00" Storyboard.Target="{StaticResource GridRotateTransform}" 
                                                                         Storyboard.TargetProperty="(RotateTransform.Angle)" From="0" To="0" Duration="0:0:1"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.ExitActions>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                            </Grid>



                            <Canvas Height="24" Width="24" HorizontalAlignment="Left" VerticalAlignment="Center" Background="Transparent" IsHitTestVisible="False" >
                                <Ellipse Canvas.Top="2" Canvas.Left="2" Height="15" Width="15" StrokeThickness="3" Stroke="DarkGray" />
                                <Rectangle Height="3" Width="8" Canvas.Left="14" Canvas.Top="13" Fill="DarkGray" RenderTransformOrigin="0.00,0.5" >
                                    <Rectangle.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform/>
                                            <SkewTransform/>
                                            <RotateTransform Angle="45"/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </Rectangle.RenderTransform>

                                </Rectangle>
                            </Canvas>

                            <TextBox x:Name="SearchText" Background="{x:Null}" Foreground="Black"
                    		     Text="{Binding TextFilter, Mode=TwoWay, Delay=600, UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="18"
                    		     BorderThickness="0" Margin="30,0,0,0"
                         >
                                <FrameworkElement.ToolTip>
                                    <ToolTip>
                                        <TextBlock>
                                        <Run>This is a full text search. You can combine your conditions separate with a space.</Run>
                                        <LineBreak/>
                                        <Run>&quot;altis&quot; - Filters for servername / missions / modes</Run> <Run FontWeight="Bold">with</Run> <Run>the substring Altis</Run>
                                        <LineBreak/>
                                        <Run>&quot;-live&quot; - Filters for servername / missions / modes</Run> <Run FontWeight="Bold">without</Run> <Run>the substring Live</Run>
                                        <LineBreak/>
                                        <Run>&quot;&gt;10&quot; - Filters for server with more the 10 players</Run>
                                        <LineBreak/>
                                        <Run>&quot;IPAddress:GamePort&quot; - Do only a request for that particular server</Run>
                                        <LineBreak/>
                                        <Run>Some character doesnt work with the filter!</Run>
                                        </TextBlock>
                                    </ToolTip>
                                </FrameworkElement.ToolTip>
                            </TextBox>
                        </Grid>
                    </Grid>

                    <Grid Grid.Row="1" Background="Black" >
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <Image  Source="Img/ArmA_3_Logo.png" Opacity=".9" IsHitTestVisible="False">
                            <UIElement.Effect>
                                <!--<Shader:Glow x:Name="GlowShader" Threshold="0.6" GlowFactor="2"/>-->
                                <Shader:multishader_frag x:Name="GlowShader" 
                                                     Master="2.6"
                                                     BlurRadius="3.3"
                                                     GlowIntensity="0.7"
                                                     NoiseIntensity="0.7"
                                                     DirectionHorizontal="7.1"
                                                     TextureHeight="{Binding Path=ActualHeight, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Grid}}"
                                                     TextureWidth="{Binding Path=ActualWidth, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Grid}}" BlurIntensity="2.5"/>
                            </UIElement.Effect>
                        </Image>

                        <ItemsControl HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="300" Width="290" 
                                  Opacity="0.8"
                                  ItemsSource="{Binding ActionLog, Mode=OneWay}" Margin="20,20,0,20">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="viewModel:LogEntry">
                                    <TextBlock Width="108" Height="18" 
                                           Text="{Binding Text}"
                                           FontFamily="Consolas"
                                           Foreground="#FFC9744D"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <views:ServerListControl />

                        <!--  ItemsSource="{Binding Path=SelectedServerItem.CurrentPlayers}" -->
                        <ListBox Grid.Row="1" Height="171" MinHeight="18" BorderThickness="1,0,1,1" BorderBrush="#FF688CAF"
                             Foreground="{StaticResource ForegroundNormalBrush}"
                            ItemsSource="{Binding Path=SelectedServerItem.CurrentPlayers}"
                             Background="Transparent"  
                             ScrollViewer.VerticalScrollBarVisibility="Disabled"
                             ScrollViewer.HorizontalScrollBarVisibility="Auto" VerticalAlignment="Bottom"
                             >
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Vertical" IsItemsHost="True" ItemWidth="161" />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate >
                                    <Grid Width="161" Margin="3,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="1" Text="{Binding Path=Name}" TextTrimming="CharacterEllipsis" Padding="2"/>
                                        <TextBlock Grid.Column="0" Padding="2" >
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0:0}h:{1:00}m">
                                                    <Binding Path="OnlineTime.Hours"/>
                                                    <Binding Path="OnlineTime.Minutes"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>

                        </ListBox>
                    </Grid>
                    <GridSplitter Grid.Column="1" Background="Transparent" Width="10" 
                              ResizeBehavior="PreviousAndNext" ResizeDirection="Columns" HorizontalAlignment="Stretch" Grid.Row="1"  />

                    <Grid Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" >
                        <Grid.Resources>
                            <CollectionViewSource x:Key="CvsSelectedAddons" Source="{Binding Addons}" IsLiveFilteringRequested="True" IsLiveSortingRequested="True" Filter="CvsSelectedAddons_OnFilter">
                                <CollectionViewSource.LiveFilteringProperties>
                                    <sys:String>IsActive</sys:String>
                                </CollectionViewSource.LiveFilteringProperties>
                                <CollectionViewSource.LiveSortingProperties>
                                    <sys:String>ActivationOrder</sys:String>
                                </CollectionViewSource.LiveSortingProperties>
                                <CollectionViewSource.SortDescriptions>
                                    <ComponentModel:SortDescription PropertyName="ActivationOrder" Direction="Ascending"/>
                                </CollectionViewSource.SortDescriptions>
                            </CollectionViewSource>
                        </Grid.Resources>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="32"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <ListBox ScrollViewer.VerticalScrollBarVisibility="Disabled"
                             x:Name="TabListBox"
                             BorderThickness="0"
                             SelectedIndex="0"
                             Background="{x:Null}" Margin="0,0,29,0" 
                             OverridesDefaultStyle="True">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Foreground="{StaticResource ForegroundNormalBrush}"
                               Margin="0,4,4,0" FontSize="18"
                               
                               Padding="2"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="HorizontalContentAlignment" Value="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource FindAncestor, AncestorLevel=1, AncestorType={x:Type ItemsControl}}}"/>
                                    <Setter Property="VerticalContentAlignment" Value="{Binding VerticalContentAlignment, RelativeSource={RelativeSource FindAncestor, AncestorLevel=1, AncestorType={x:Type ItemsControl}}}"/>
                                    <Setter Property="Padding" Value="2,0,0,0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                                <Border x:Name="Bd" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="True">
                                                    <ContentPresenter ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" ContentStringFormat="{TemplateBinding ContentStringFormat}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter Property="Background" TargetName="Bd" Value="{DynamicResource {x:Static SystemColors.AppWorkspaceBrushKey}}"/>
                                                        <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}"/>
                                                    </Trigger>
                                                    <MultiTrigger>
                                                        <MultiTrigger.Conditions>
                                                            <Condition Property="IsSelected" Value="True"/>
                                                            <Condition Property="Selector.IsSelectionActive" Value="False"/>
                                                        </MultiTrigger.Conditions>
                                                        <Setter Property="Background" TargetName="Bd" Value="{DynamicResource {x:Static SystemColors.AppWorkspaceBrushKey}}"/>
                                                        <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}}"/>
                                                    </MultiTrigger>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <sys:String>Addons</sys:String>
                            <sys:String>Arma III</sys:String>
                        </ListBox>
                        <!--<TextBlock Grid.Row="0" Text="installed addons"
                               Foreground="{StaticResource ForegroundNormalBrush}"
                               Margin="0,4,4,0" FontSize="18"
                               
                               Padding="2" PreviewMouseUp="TextBlock_PreviewMouseUp"/>-->

                        <TextBlock Grid.Row="0" Text="..." Visibility="Collapsed"
                               Foreground="{StaticResource ForegroundNormalBrush}"
                               HorizontalAlignment="Right"
                               Margin="0,4,4,0" FontSize="18"
                               Padding="2" PreviewMouseUp="TextBlock_PreviewMouseUp">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource ResourceKey={x:Type TextBlock}}">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="true">
                                            <Setter Property="Background" Value="{StaticResource {x:Static SystemColors.HighlightBrushKey}}"/>
                                            <Setter Property="Foreground" Value="{StaticResource {x:Static SystemColors.HighlightTextBrushKey}}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>


                        <Button Grid.Row="0" x:Name="PreferencesContextMenuButton"
                                Foreground="{StaticResource ForegroundNormalBrush}"
                                HorizontalAlignment="Right"
                                FontSize="18"
                                Margin="4"
                                Style="{DynamicResource ArmaButtonStyle}" 
                                Content="{DynamicResource PreferencesViewBoxIcon}"
                                Click="PreferencesContextMenuButton_OnClick">

                            <Button.ContextMenu>
                                <ContextMenu x:Name="PreferencesContextMenu" 
                                              
                                             Placement="Bottom">
                                    <MenuItem Header="Open install folder" Click="OpenInstallFolder_OnClick" />
                                    <MenuItem Header="Addons" />
                                </ContextMenu>
                            </Button.ContextMenu>

                        </Button>

                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="205"/>
                            </Grid.RowDefinitions>

                            <!--<Rectangle Grid.Row="1" Fill="{StaticResource ListingBackgroundBrush}"/>-->
                            <Grid Grid.Row="0" Background="{StaticResource ListingBackgroundBrush}">
                                <views:AddonsControl/>
                            </Grid>

                            <TextBlock Grid.Row="2" Text="selected addons"
                               Foreground="{StaticResource ForegroundNormalBrush}"
                               Margin="0,8,4,4" FontSize="18"
                               
                               Padding="2"/>

                            <ListBox Grid.Row="2" Margin="0,33,0,0" ItemTemplate="{DynamicResource SelectAddonsDataTemplate}"
                             Background="{StaticResource ListingBackgroundBrush}"
                             Height="125" VerticalAlignment="Top" 
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ItemsSource="{Binding Source={StaticResource CvsSelectedAddons}}"
                             Foreground="{StaticResource ForegroundNormalBrush}"
                             FontSize="14"
                             />
                            <StackPanel  Orientation="Vertical" Grid.Row="2" VerticalAlignment="Bottom" Height="40">
                                <CheckBox IsChecked="{Binding LaunchWithoutHost}" Content="start Arma without Server"  FontSize="12" Foreground="{StaticResource ForegroundNormalBrush}" Margin="0,3"/>
                                <CheckBox  IsChecked="{Binding RunAsAdmin}" Content="as Administrator"  FontSize="12" Foreground="{StaticResource ForegroundNormalBrush}" Margin="0,3"/>
                            </StackPanel>

                            <Grid.Style>
                                <Style TargetType="Grid" >
                                    <Setter Property="Visibility" Value="Hidden"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=SelectedItem, ElementName=TabListBox}" Value="Addons">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>

                        </Grid>
                        <Grid Grid.Row="1" Background="{DynamicResource {x:Static SystemColors.AppWorkspaceBrushKey}}">
                            <views:PreferencesControl />
                            <Grid.Style>
                                <Style TargetType="Grid" >
                                    <Setter Property="Visibility" Value="Hidden"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=SelectedItem, ElementName=TabListBox}" Value="Arma III">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                        </Grid>
                    </Grid>

                </Grid>
                
                <Grid Grid.Row="1">
                    <FrameworkElement.Resources>
                        <Style TargetType="{x:Type TextBlock}" >
                            <Setter Property="Foreground" Value="{StaticResource ForegroundNormalBrush}"/>
                        </Style>
                    </FrameworkElement.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="49"/>
                        <ColumnDefinition Width="221"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock HorizontalAlignment="Left" Width="309" Margin="0,0,0,27">
                    <Run Text="{Binding ServerItemsView.Count, StringFormat=Server: {0}, Mode=OneWay}"/>
                    <Run Text="{Binding ServerItems.Count, StringFormat='/ {0}', Mode=OneWay}"  FontFamily="Segoe UI Symbol"/>
                    </TextBlock>
                    <StackPanel Orientation="Horizontal"  HorizontalAlignment="Right" VerticalAlignment="Top" Height="15">
                        <TextBlock Text="{Binding SelectedServerItem.Name, FallbackValue='no server selected'}" Height="15" Margin="10,0"/>
                        <TextBlock Text="{Binding SelectedServerItem.Version, FallbackValue=Version : 0.0.0.0, StringFormat=Version :\{0\}}" Height="15"/>
                    </StackPanel>
                    <TextBlock Text="{Binding SelectedServerItem.ModsText, StringFormat=Addons :{0}, FallbackValue='Addons : Arma 3'}" 
                           HorizontalAlignment="Right" Margin="0,15,10,0" TextWrapping="Wrap"/>

                    <Button Grid.Column="2" 
                        Width="120"  
                        HorizontalAlignment="Center" 
                        Command="Open"
                        CommandParameter="{Binding Path=SelectedServerItem}"
                        FontSize="22"
                        FontWeight="ExtraBlack" Margin="0,3"
                        >
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Content" Value="Play"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedServerItem.IsPlayerSlotsFull, FallbackValue=False}" Value="True">
                                        <Setter Property="Content" Value="auto join"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <TextBox Text="{Binding SelectedServerItem.Endpoint, FallbackValue='', Mode=OneWay}" HorizontalAlignment="Left" Width="128" 
                         IsReadOnly="True"
                         BorderThickness="0" Background="Transparent" 
                         Foreground="{StaticResource ForegroundNormalBrush}"
                         Margin="0,15,0,12"/>
                    <Rectangle Grid.Column="1" HorizontalAlignment="Left" 
                           Fill="#FF688CAF"
                           Width="1"/>
                </Grid>

            </Grid>
            
            <views:AddonListControl Visibility="Collapsed" ></views:AddonListControl> 
            
        </Grid>



        <!-- auto join overlayer -->
        <Grid Grid.RowSpan="2" Background="#7CA9A9A9" x:Name="AutoJoinView" Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Border Grid.Column="1" VerticalAlignment="Center"
                    BorderBrush="AliceBlue"
                    BorderThickness="2">
                    <view:AutoJoinControl Canceled="AutoJoinControl_Canceled">

                    </view:AutoJoinControl>
                    <FrameworkElement.Effect>

                        <DropShadowEffect BlurRadius="25" ShadowDepth="13"/>
                    </FrameworkElement.Effect>
                </Border>
            </Grid>

        </Grid>

        <!-- InfoOverlayGrid -->
        <Grid Grid.Row="0" Grid.RowSpan="2" Background="#E2000000" x:Name="InfoOverlayGrid" Visibility="Collapsed">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="430" Background="Black">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"  TextWrapping="Wrap" FontSize="16" Margin="10" >
                   This is an experimental version of Armabowser.<LineBreak /><LineBreak />
